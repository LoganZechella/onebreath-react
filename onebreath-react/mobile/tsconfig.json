{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/src/*"
      ],
      "@shared": [
        "../shared/src/index.ts"
      ]
    },
    "jsx": "react-jsx",
    "types": [
      "expo-constants"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../shared/src/**/*",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}